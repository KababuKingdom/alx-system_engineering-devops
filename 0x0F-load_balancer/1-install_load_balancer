#!/usr/bin/env bash
# install and setup haproxy on a new Ubuntu machine 

apt-get -y install software-properties-common
apt-get -y update
apt-get -y install haproxy

echo "ENABLED=1" >> /etc/default/haproxy

echo "
	frontend http
	bind *:80
	mode http
	default_backend web-backend
	backend web-backend
	balance roundrobin
	option httpclose
	option forwardfor
	server 134379-web-01 100.26.235.206 check
	server 134379-web-02 34.234.204.174 check
	option httpchk
" >> /etc/haproxy/haproxy.cfg

service haproxy restart
